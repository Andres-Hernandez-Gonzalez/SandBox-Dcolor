@model IEnumerable<DColor.DB.Rol>

@{
    ViewBag.Title = "Todos los roles";
}

<h2>Listado de roles</h2>

<p>
    @Html.ActionLink("Nuevo Rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.idRol }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idRol }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idRol })
        </td>
    </tr>
}

</table>
